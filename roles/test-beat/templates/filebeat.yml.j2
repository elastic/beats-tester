# {{ ansible_managed }}

filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml

filebeat.inputs:
- paths:
  - '{{ filebeat_logs_dir }}/*.log'

output.file:
  path: '${path.logs}'
  filename: output.json

logging:
  level: info
  json: true
  to_files: true
  files:
    name: "{{ beat_name }}.json"
  metrics:
    enabled: true

http.host: localhost